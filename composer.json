{
    "name": "fccn/webapp-tools-translate",
    "description": "Set of tools to enable translation on web applications",
    "keywords": ["fccn", "webapp-tools", "gettex"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Costa",
            "email": "paulo.costa@fccn.pt"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/twig-view": "^2.3",
        "fccn/webapp-tools-common": "^1.0"
    },
    "autoload":{
      "psr-4": {
        "Fccn\\Lib\\": "src",
        "Fccn\\WebComponents\\": "src/web_components"
      }
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "herloct/codeception-slim-module": "^1.1",
        "twig/extensions": "^1.5",
        "slim/slim": "^3.9"
    },
    "autoload-dev": {
        "psr-4": {
            "Fccn\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "test": "codecept run unit"
    }

}
